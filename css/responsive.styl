@import 'nib/vendor'

vendor-prefixes = o moz ms webkit official

@media screen and (min-width: 841px)

    body
            max-width 1300px
            font-size 15px

        header
            #social
                position absolute
                right 2em
                top 1.5em
                visibility visible

                a
                    background: #699 url(../img/social-icon.jpg) repeat top left;
                    border-radius: 10em;
                    border: 2px #FFF solid;
                    box-shadow: 0 0 20px #fff;
                    color: #FFF;
                    display: inline-block;
                    font-family: "Sosa";
                    font-size: 2em;
                    margin: 0 0.4em 0 0;
                    padding: 0.2em 0.3em;
                    text-decoration: none;
                    
                    &:hover
                        box-shadow 0px 0px 0px #f29c14

                #facebook:after
                    content "v"
                
                #twitter:after
                    content "t"
                
                #linkedin:after
                    content "Ä…"
                
            .titulo
                h1
                    font-size 2em
                h3
                    font-size 1.3em

        .cn-container
            float left
            display inline-block
            margin-left 4%

            .dd-cn
                font-size 1.1em
        
        .ac-container
            float right
            display inline-block

            .dd-ac
                font-size 1.1em
    footer
        div
            display inline-block
            font-size 1.2em
            
            a
                color #3d605f

        .clientes
            margin-bottom 0px
            margin-left 15%
            margin-top 0px

            a
                display inline-block
                margin-left 50px

        .credito
            display block
            margin-top 50px
            text-align center

        .social-foot
            visibility hidden

