@import 'nib/vendor'

vendor-prefixes = o moz ms webkit official

@font-face {
    font-family: 'icomoon';
    src:url('fonts/icomoon.eot');
    src:url('fonts/icomoon.eot?#iefix') format('embedded-opentype'),
        url('fonts/icomoon.ttf') format('truetype'),
        url('fonts/icomoon.woff') format('woff'),
        url('fonts/icomoon.svg#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}
@media screen and (min-width: 841px)

    body
            font-size 15px

        header
            #social
                position absolute
                right 2em
                top 1.5em
                visibility visible

                a
                    background: #699 url(../img/social-icon.jpg) repeat top left;
                    border-radius: 10em;
                    border: 2px #FFF solid;
                    box-shadow: 0 0 20px #fff;
                    color: #FFF;
                    display: inline-block;
                    font-family: 'icomoon';
                    font-size: 2.2em;
                    margin: 0 0.4em 0 0;
                    padding: 0.3em 0.3em;
                    text-decoration: none;
                    
                    &:hover
                        box-shadow 0px 0px 0px #f29c14

                #facebook:after
                    content "\e603"
                
                #googleplus:after
                    content "\e605"
                
                #linkedin:after
                    content "\e604"
                
            .titulo
                h1
                    font-size 2.6em
                h3
                    font-size 1.3em

        .cn-container
            float left
            display inline-block
            margin-left 4%

            .dd-cn
                font-size 1.1em
        
        .ac-container
            float right
            display inline-block

            .dd-ac
                font-size 1.1em
    footer
        div
            display inline-block
            font-size 1.2em
            
            a
                color #3d605f

        .clientes
            margin-bottom 0px
            margin-top 0px

            a
                display inline-block
                margin-left 50px

        .credito
            display block
            margin-top 50px
            text-align center

        .social-foot
            visibility hidden

